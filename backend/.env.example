# Antibody Backend Environment Variables
# Copy this file to .env and fill in your actual values

# ========================================
# Application Settings
# ========================================
APP_NAME=Antibody API
APP_VERSION=1.0.0
DEBUG=False
HOST=0.0.0.0
PORT=8000

# ========================================
# Security & Authentication
# ========================================
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your_secret_key_here_generate_a_secure_one
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ========================================
# PostgreSQL Database
# ========================================
POSTGRES_USER=antibody
POSTGRES_PASSWORD=your_postgres_password_here
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=antibody

# ========================================
# Neo4j Graph Database
# ========================================
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_neo4j_password_here
NEO4J_DATABASE=neo4j

# ========================================
# Redis (Message Broker & Cache)
# ========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# ========================================
# Qdrant Vector Database
# ========================================
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_API_KEY=
QDRANT_COLLECTION_NAME=claims

# ========================================
# Grok API (xAI)
# ========================================
# Get from: https://x.ai/
GROK_API_KEY=your_grok_api_key_here
GROK_API_BASE=https://api.x.ai/v1
GROK_MODEL=grok-beta

# ========================================
# X (Twitter) API v2
# ========================================
# Get from: https://developer.twitter.com/en/portal/dashboard
X_API_KEY=your_x_api_key_here
X_API_SECRET=your_x_api_secret_here
X_ACCESS_TOKEN=your_x_access_token_here
X_ACCESS_TOKEN_SECRET=your_x_access_token_secret_here
X_BEARER_TOKEN=your_x_bearer_token_here

# ========================================
# Cohere API
# ========================================
# Get from: https://dashboard.cohere.com/api-keys
COHERE_API_KEY=your_cohere_api_key_here
COHERE_MODEL=embed-multilingual-v3.0

# ========================================
# Rate Limiting
# ========================================
RATE_LIMIT_AUTHENTICATED=100
RATE_LIMIT_ANONYMOUS=20

# ========================================
# Cache Settings
# ========================================
CACHE_TTL_SECONDS=300

# ========================================
# CORS Settings
# ========================================
CORS_ORIGINS=["http://localhost:3000", "http://localhost:3001"]
